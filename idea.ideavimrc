let mapleader = ","
let g:mapleader = ","

" Fast saving
nmap <leader>w :w!<cr>

" Fast quit
nmap <leader>q :q!<cr>

" space to search
map <space> /
map <c-space> ?

" map 0 to first non-blank character
map 0 ^

" Move a line of text using ALT + [jk]
nmap <M-j> mz:m+<cr>`z
nmap <M-k> mz:m-2<cr>`z
vmap <M-j> :m'>+<cr>`<my`>mzgv`yo`z
vmap <M-j> :m'<-2<cr>`>my`>mzgv`yo`z

